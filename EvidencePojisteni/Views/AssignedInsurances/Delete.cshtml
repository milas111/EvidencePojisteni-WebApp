@model EvidencePojisteni.Models.AssignedInsurances.AssignedInsurance

@{
    ViewData["Title"] = "Odstranění sjednaného pojištění";
}

<h2 class="font-weight-bold">Odstranění sjednaného pojištění</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Insured)
        </dt>
        <dd class="col-sm-9">
            @{
                var fullName = Model.Insured.FirstName + " " + Model.Insured.SurName;
                @Html.DisplayFor(model => fullName)
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.InsuranceRole)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.InsuranceRole)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Insurance.InsuranceName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Insurance.InsuranceName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Issue)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Issue)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ValidFrom)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ValidFrom)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ValidTo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ValidTo)
        </dd>
    </dl>

    <div class="text-center">
        <button type="button" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#dialog">
            Odstranit
        </button>
    </div>
</div>

<div class="modal fade" id="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dialog-label">Opravdu chcete odstranit toto sjednané pojištění?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Zavřít">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="AssignedInsuranceId" />
                    <input type="submit" value="Odstranit" class="btn btn-danger" />
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zavřít</button>
            </div>
        </div>
    </div>
</div>