@model EvidencePojisteni.Models.InsuranceEvents.InsuranceEvent

@{
    ViewData["Title"] = "Úprava pojistné události";
}

<h2 class="font-weight-bold">Úprava pojistné události pro @ViewBag.Name</h2>
<br />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="InsuranceEventId" />

    <div class="row">
        <h4 class="font-weight-bold text-center col-md-8 my-4">Výběr pojištění</h4>
    </div>

    <div class="row">
        <div class="form-group col-12 col-md-8">
            <label asp-for="InsuranceId" class="control-label"></label>
            <select asp-for="InsuranceId" class="form-control" asp-items="ViewBag.InsuranceId"></select>
            <span asp-validation-for="InsuranceId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group d-none">
        <label asp-for="InsuredId" class="control-label"></label>
        <select asp-for="InsuredId" class="form-control" asp-items="ViewBag.InsuredId"></select>
        <span asp-validation-for="InsuredId" class="text-danger"></span>
    </div>
    <div class="row">
        <h4 class="font-weight-bold text-center col-md-8 my-4">Údaje pojištěnce</h4>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="SurName" class="control-label"></label>
            <input asp-for="SurName" class="form-control" />
            <span asp-validation-for="SurName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<EvidencePojisteni.Models.Insureds.Gender>()"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group col-12 col-md-4">
            <label asp-for="Zip" class="control-label"></label>
            <input asp-for="Zip" class="form-control" />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <h4 class="font-weight-bold text-center col-md-8 my-4">Popis události</h4>
    </div>
    <div class="row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="EventDate" class="control-label"></label>
            <input asp-for="EventDate" class="form-control" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="EventDescription" class="control-label"></label>
            <input asp-for="EventDescription" class="form-control" />
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <h4 class="font-weight-bold text-center col-md-8 my-4">Platební údaje</h4>
    </div>
    <div class="row">

        <div class="form-group col-12 col-md-4">
            <label asp-for="AccountNumber" class="control-label"></label>
            <input asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="BankCode" class="control-label"></label>
            <input asp-for="BankCode" class="form-control" />
            <span asp-validation-for="BankCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center my-4x">
        <input type="submit" value="Uložit" class="btn-lg btn-info" />
    </div>
</form>