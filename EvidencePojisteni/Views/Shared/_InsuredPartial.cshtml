@model EvidencePojisteni.Models.Insureds.InsuredBase

<div class="row">
    <div class="form-group col-12 col-md-4">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="SurName" class="control-label"></label>
        <input asp-for="SurName" class="form-control" />
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-12 col-md-4">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<EvidencePojisteni.Models.Insureds.Gender>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-12 col-md-4">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-12 col-md-4">
        <label asp-for="Street" class="control-label"></label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="Zip" class="control-label"></label>
        <input asp-for="Zip" class="form-control" />
        <span asp-validation-for="Zip" class="text-danger"></span>
    </div>
</div>